[global]
base_path = /some/fs/path
channels = saucy, saucy-proposed, saucy-customized
gpg_key_path = secret/gpg/keys/
gpg_keyring_path = secret/gpg/keyrings/
publish_path = www/
state_path = state/
mirrors = a, b
public_fqdn = system-image.example.net
public_http_port = 80
public_https_port = 443

[channel_saucy]
type = manual
versionbase = 1
fullcount = 10

[channel_saucy-proposed]
type = auto
versionbase = 1
fullcount = 20
deltabase = saucy, saucy-proposed
files = ubuntu, device, version
file_ubuntu = cdimage-ubuntu;daily-preinstalled;series=saucy,import=any
file_device = cdimage-device;daily-preinstalled;series=saucy,import=any
file_version = version

[channel_saucy-customized]
type = auto
versionbase = 1
fullcount = 15
files = ubuntu, device, custom, version
file_ubuntu = system-image;saucy;file=ubuntu
file_device = system-image;saucy;file=device
file_custom = http;http://www.example.net/custom/custom.tar.xz;prefix=custom-,monitor=http://www.example.net/custom/build_number
file_version = version

[mirror_default]
ssh_user = mirror
ssh_key = secret/ssh/mirror
ssh_port = 22
ssh_command = sync-mirror

[mirror_a]
ssh_host = a.example.com

[mirror_b]
ssh_host = b.example.com
